# Solana RPC & Network
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Centralized Exchange (CEX) API credentials
CEX_API_KEY=your_cex_api_key
CEX_API_SECRET=your_cex_secret
CEX_API_PASSPHRASE=your_cex_passphrase

# JWT authentication
JWT_SECRET=your_jwt_secret
JWT_EXPIRY_HOURS=8

# Copy Trading settings
COPY_TRADING_FEE=0.001

# Database (PostgreSQL) connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=temple_analytics

# Redis for caching and Celery broker
REDIS_URL=redis://localhost:6379/0

# Email (SMTP) settings for notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=no-reply@temple-analytics.com

# SMS gateway settings (e.g., Twilio)
SMS_ACCOUNT_SID=your_twilio_sid
SMS_AUTH_TOKEN=your_twilio_token
SMS_FROM_NUMBER=+1234567890

# Webhook for Discord/Slack notifications
NOTIFY_WEBHOOK_URL=https://hooks.example.com/services/XXX/YYY/ZZZ

# AI model paths
MODEL_PRICE_FORECAST_PATH=models/price_forecast.pkl
MODEL_SENTIMENT_PATH=models/sentiment_model.pkl

# Feature toggles
ENABLE_COPY_TRADING=true
ENABLE_NOTIFICATIONS=true
ENABLE_AI_PREDICTIONS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
